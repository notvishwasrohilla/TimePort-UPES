{
  "manifest_version": 3,
  "name": "TimePort UPES",
  "version": "1.1.0",
  "description": "Reads your timetable from the UPES dashboard and syncs sessions with Google Calendar.",
  "permissions": [
    "identity",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://myupes-beta.upes.ac.in/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "887400701013-rlcudhl3sm36usbpckc9qp9d1nv0sgff.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/userinfo.email",
      "openid"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://myupes-beta.upes.ac.in/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
