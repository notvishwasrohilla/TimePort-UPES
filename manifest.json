{
  "manifest_version": 3,
  "name": "TimePort UPES",
  "description": "Detects timetable on myupes portal and offers Add to Google Calendar.",
  "version": "1.0.0",
  
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://myupes-beta.upes.ac.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TimePort UPES"
  },
  "content_scripts": [
    {
      "matches": ["https://myupes-beta.upes.ac.in/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://myupes-beta.upes.ac.in/*"]
    }
  ]
}
